@{
    ViewData["Title"] = "Home Page";
}

<style>
    [type="date"] {
        background: #fff url(https://cdn1.iconfinder.com/data/icons/cc_mono_icon_set/blacks/16x16/calendar_2.png) 97% 50% no-repeat;
    }

        [type="date"]::-webkit-inner-spin-button {
            display: none;
        }

        [type="date"]::-webkit-calendar-picker-indicator {
            opacity: 0;
        }

    label {
        display: block;
    }

    input {
        border: 1px solid #c4c4c4;
        border-radius: 5px;
        background-color: #fff;
        padding: 3px 5px;
        box-shadow: inset 0 3px 6px rgba(0,0,0,0.1);
        width: 190px;
    }
</style>


<div class="text-center">
    <h1 class="display-4">Reception</h1>
    <p class="lead">På denne side kan du se hvor mange der har bestilt morgenmad, samt hvor mange der har spist deres morgenmad.</p>
</div>
<div class="mt-3 mb-3">
    <label for="datePicker">Vælg dato</label>
    <input type="date" name="dateofbirth" id="datePicker">
</div>

<div class="row">
    <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="room201" data-toggle="list" href="#room201_info" role="tab">Værelse 201</a>
            <a class="list-group-item list-group-item-action" id="room300" data-toggle="list" href="#room300_info" role="tab">Værelse 300</a>
            <a class="list-group-item list-group-item-action" id="room341" data-toggle="list" href="#room341_info" role="tab">Værelse 341</a>
            <a class="list-group-item list-group-item-action" id="room400" data-toggle="list" href="#room400_info" role="tab">Værelse 400</a>
        </div>
    </div>
    <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="room201_info" role="tabpanel" aria-labelledby="list-home-list">Voksne: 2 <br />Børn: 2</div>
            <div class="tab-pane fade" id="room300_info" role="tabpanel" aria-labelledby="list-profile-list">Voksne: 1<br />Børn: 1</div>
            <div class="tab-pane fade" id="room341_info" role="tabpanel" aria-labelledby="list-messages-list">Voksne: 2<br />Børn: 0</div>
