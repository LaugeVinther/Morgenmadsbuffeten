@model ReceptionModel

<style>
    [type="date"] {
        background: #fff url(https://cdn1.iconfinder.com/data/icons/cc_mono_icon_set/blacks/16x16/calendar_2.png) 97% 50% no-repeat;
    }

        [type="date"]::-webkit-inner-spin-button {
            display: none;
        }

        [type="date"]::-webkit-calendar-picker-indicator {
            opacity: 0;
        }

    label {
        display: block;
    }

    input {
        border: 1px solid #c4c4c4;
        border-radius: 5px;
        background-color: #fff;
        padding: 3px 5px;
        box-shadow: inset 0 3px 6px rgba(0,0,0,0.1);
        width: 190px;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Reception</h1>
</div>

<h3>Checket ind til morgenmad i dag, @DateTime.Now.Date.ToString("dd/MM/yyyy")</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CheckIns.FirstOrDefault().RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckIns.FirstOrDefault().Adults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckIns.FirstOrDefault().Children)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CheckIns)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adults)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Children)
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Bestil morgenmad</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="MakeReservation" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reservation.Date" class="control-label"></label>
                <input asp-for="Reservation.Date" class="form-control" />
                <span asp-validation-for="Reservation.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.NumberOfAdults" class="control-label"></label>
                <input asp-for="Reservation.NumberOfAdults" class="form-control" />
                <span asp-validation-for="Reservation.NumberOfAdults" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.NumberOfChildren" class="control-label"></label>
                <input asp-for="Reservation.NumberOfChildren" class="form-control" />
                <span asp-validation-for="Reservation.NumberOfChildren" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Bestil morgenmad" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

